@import 'cozy-ui'

$set-device
    content         ''
    display         inline-block
    width           em(30px)
    height          em(30px)
    vertical-align  middle

.set-loading
    @extend $icon-spinner-blue
    @extend $icon-16
    margin-left 0.5em

[role=application]
    @extend $table

    .set-table-service
    .set-table-account
    .set-table-sync
    .set-table-status
        flex  0 0 25%

    .set-table-name
        flex 0 0 40%

    .set-table-activity
    .set-table-permission
    .set-table-actions
        flex 0 0 15%

    .set-table-services
        .coz-table-cell
            padding  em(8px, 14px) em(32px, 14px)

    .set-table-devices
        .coz-table-primary
            padding-left em(80px)

    .coz-table-primary
        font-size  1rem

    .set-device-laptop
        background embedurl('../assets/icons/icon-device-laptop.svg') em(32px) center no-repeat

    .set-device-phone
        background embedurl('../assets/icons/icon-device-phone.svg') em(32px) center no-repeat

    @media (max-width: (768/basefont)rem)
        .set-table-service
            flex  0 0 100%

        .set-table-name
            flex  0 0 70%

        .set-table-actions
            flex  0 0 30%

        .set-table-account
        .set-table-sync
        .set-table-status
        .set-table-activity
        .set-table-permission
            display none
