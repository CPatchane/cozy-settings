@import 'cozy-ui'

.set-content-table
    text-align left
    color      grey-11

.set-content-header
.set-content-cell
    box-sizing  border-box
    padding     em(15px) em(32px)
    font-size(14px)

.set-content-row
    display         flex
    flex-direction  row
    align-items     center
    width           100%
    border-bottom   1px solid grey-09

.set-content-file
    color grey-08

.set-content-header
  padding         em(8px, 12px) em(28px, 12px)
  font-size(12px)
  text-transform  uppercase

.set-content-file
    flex 0 0 40%

.set-content-header.set-content-file
    padding-left   em(45px)

.set-content-cell.set-content-file
    padding-left   em(45px)
    font-size(16px)
    white-space    nowrap
    overflow       hidden
    text-overflow  ellipsis

.set-content-date
.set-content-size
    flex 0 0 15%

.set-content-status
    flex 0 0 25%

.set-loading
    @extend $icon-spinner-small-blue
    margin-left 0.5em

@media (max-width: (768/basefont)rem)
    .set-content-header
    .set-content-date
    .set-content-size
    .set-content-status
        display none

    .set-content-file
        flex 0 0 85%

    .set-content-cell.set-content-file
        left-padded(61px)
        background-position em(16px) center
