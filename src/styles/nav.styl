@require 'cozy-ui'

.set-nav
  margin     em(24px) 0
  padding    0
  list-style none
.set-nav-item
    position    relative
    z-index     10
    &:hover
        &::before
            content         ''
            position        absolute
            background      grey-09
            height          3em
            width           90%
            z-index         -1
            border-radius   0 3px 3px 0px
    a
        display         block
        left-padded(50px)
        line-height     em(48px)
        text-decoration none
        color           grey-08
        &.active
        &:hover
            box-shadow  inset 4px 0 0 0 dodger-blue
        &.active
            font-weight bold

    .set-cat-account
        background: embedurl("../assets/icons/icon-people.svg") em(24px) center no-repeat
        &.active
            background-image: embedurl("../assets/icons/icon-people-active.svg")
    .set-cat-devices
        background: embedurl("../assets/icons/icon-phone.svg") em(24px) center no-repeat
        &.active
            background-image: embedurl("../assets/icons/icon-phone-active.svg")
    .set-cat-storage
        background: embedurl("../assets/icons/icon-box.svg") em(24px) center no-repeat
        &.active
            background-image: embedurl("../assets/icons/icon-box-active.svg")
    .set-cat-notif
        background: embedurl("../assets/icons/icon-email-notif.svg") em(24px) center no-repeat
        &.active
            background-image: embedurl("../assets/icons/icon-email-notif-active.svg")


@media (max-width: (1023/basefont)rem)
    .set-nav
        display         flex
        justify-content space-around
        margin          em(11px) 0 em(6px)

    .set-nav-item
        &:hover
            &::before
                content    none
        a
            min-width           em(100px)
            padding             em(35px) 0 0
            text-align          center
            color               grey-11
            font-size(10px)
            line-height         1
            &:hover
            &:active
                box-shadow  none
                font-weight normal
                color       grey-08

        .set-cat-account
        .set-cat-devices
        .set-cat-storage
        .set-cat-notif
            background-position center top
